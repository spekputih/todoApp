<%- include("header") %>
<body>
	<div class="box" id="heading">
		<h1><%= listTitle %></h1>
	</div>
	
	<div class="box"> 
	<% listItem.forEach((item)=>{ %>
		<form action="/delete" method="post">
			<div class="item">
				<input type="checkbox" name="deleteMe" value="<%= item._id %>" onChange="this.form.submit()">
				<p><%= item.name %></p>
			</div>
			<input type="hidden" name="listName" value="<%= listTitle %>"></input>
		</form>
	<% }) %>
	
	<form class="item" action="/" method="post">
		<input type="text" name="nameItem" placeholder="New Item" autocomplete="off" autofocus="true">
		<button class="" type="submit" name="button" value="<%= listTitle %>">+</button>
	</form>
	</div>
	

<%- include("footer") %>
	
</body>
</html>